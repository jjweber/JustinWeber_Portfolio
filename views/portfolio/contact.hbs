<h1 class="page-title">{{page}}</h1>

{{#if msg}}
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Hello {{sender}}!</h4>
        <p>{{msg}}</p>
        <hr>
        <p class="mb-0">I will respond to your message as soon as possible. Thank you and have a great day.</p>
    </div>
{{/if}}
<div class="form-container">
    <h4>Leave Me A Message</h4>
    <form class="needs-validation" method="POST" action="/send" novalidate>
        
        <div class="form-row">
            <div class="col-md-6 mb-6 form-group">
                <input type="text" class="form-control" name="name" id="name" placeholder="Your Name" required>
                <div class="valid-feedback">
                    Successful input!
                </div>
                <div class="invalid-feedback">
                    Please enter your name here.
                </div>
            </div>
            <div class="col-md-6 mb-6 form-group">
                <input type="text" class="form-control" name="company" id="company" placeholder="Company">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 mb-6 form-group">
                <input type="email" class="form-control" name="email" id="email" placeholder="Email Address" required>
                <div class="valid-feedback">
                    Successful input!
                </div>
                <div class="invalid-feedback">
                    Please enter a valid email address..
                </div>
            </div>
            <div class="col-md-6 mb-6 form-group">
                <input type="number" class="form-control" name="phone" id="phone" placeholder="Phone Number" aria-describedby="inputGroupPrepend" required>
                <div class="valid-feedback">
                    Successful input!
                </div>
                <div class="invalid-feedback">
                    Please enter a phone number.
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12 mb-12 form-group">
            <textarea class="form-control" name="message" id="message" rows="3" placeholder="Your Message" required></textarea>
                <div class="valid-feedback">
                    Successful input!
                </div>
                <div class="invalid-feedback">
                    Please enter a phone number.
                </div>
            </div>
        </div>
        <button class="btn btn-primary submitBtn" type="submit">Submit form</button>
    </form>
</div>

